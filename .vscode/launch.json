  "version": "0.2.0",
  "configurations": [
    {
      "type": "bun",
      "internalConsoleOptions": "neverOpen",
      "request": "launch",
      "name": "Debug File",
      "program": "src/index.ts",
      "cwd": "${workspaceFolder}",
      "args": [
        "--strategy.period",
        "12,20",
        "--strategy.thresholds.up",
        "25,26",
        "--strategy.thresholds.down",
        "25,26"
      ],
      "stopOnEntry": false,
      "watchMode": false
    }
  ]
}
